
<%- include('partials/head') %>
<body>
    <p><%= name %></p>

    <% otherUsers.forEach((otherUsers, index) => { %>
        <article style="display: none;">
            <p>id: <%= otherUsers._id %></p>
            <p>mail: <%= otherUsers.email %></p>
        </article>
        <% }) %>
    <div id="message-box"></div>
    <form id="send-container">
        <input type="text" id="message-input">
        <button type="submit" id="send-btn">Verstuur</button>
    </form>

    <script defer src="http://localhost:4000/socket.io/socket.io.js"></script>
    <script defer src="js/clientChat.js"></script>
</body>
</html>