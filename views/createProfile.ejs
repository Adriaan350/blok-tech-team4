<%- include('partials/head') %>

<body>
  <main class="createProfile">
    <section>
      <h1>Maak je profiel compleet</h1>
      <h3>Vul deze gegevens in en start met liken</h3>
    </header>
    <main class="createProfile">
      <form
        action="/profile/create"
        method="POST"
        enctype="multipart/form-data"
      >
        <div>
          <label for="name"> Naam </label>
          <input type="text" id="name" name="name" required />
        </div>
        <div>
          <label for="man">Man</label>
          <input type="radio" id="man" name="sex" value="man" />
          <label for="vrouw">Vrouw</label>
          <input type="radio" id="vrouw" name="sex" value="vrouw" />
          <label for="anders">Anders</label>
          <input type="radio" id="anders" name="sex" value="anders" />
        </div>
        <fieldset>
          <legend>Welke sporten vind je leuk?</legend>

          <ul class="sportsList">
            <li class="sport">
              <input type="checkbox" name="sports" id="checkbox1" value="voetbal" />
              <label for="checkbox1">Voetbal</label>
            </li>
            <li class="sport">
              <input type="checkbox" name="sports" id="checkbox2" value="hockey" />
              <label for="checkbox2">Hockey</label>
            </li>
            <li class="sport">
              <input type="checkbox" name="sports" id="checkbox3" value="basketbal" />
              <label for="checkbox3"> Basketbal</label>
            </li>
            <li class="sport">
              <input type="checkbox" name="sports" id="checkbox4" value="tennis" /><label for="checkbox4">Tennis</label>
            </li>
          </ul>
          <div class="addSport">
            <label for="addSport">Voeg jouw sport toe</label>
            <input type="text" id="addSport" name="addSport" />
          </div>
        </fieldset>
        <div class="bio">
          <label for="bio">Vertel iets over jezelf</label>
          <textarea name="bio" id="bio"></textarea>
        </div>
        <div class="upload">
          <label for="upload">Upload je foto</label>
          <input type="file" name="upload" id="upload" placeholder="Kies bestand"
            accept="image/png, image/jpeg, image/gif" />
        </div>
        <button>Opslaan</button>
      </form>
    </section>
  </main>
</body>